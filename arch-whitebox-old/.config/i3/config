#-----------------------------------#
#    Beanaroo's i3 Configuration    #
#-----------------------------------#

# Set super as modifier key.
set $mod Mod4

# Set font family.
font pango:monospace 11

#-------------------------#
#    Color Definition     #
#-------------------------#

# Define colors
set $base00     #2b303b
set $base01     #343d46
set $base02     #4f5b66
set $base03     #65737e
set $base04     #a7adba
set $base05     #c0c5ce
set $base06     #dfe1e8
set $base07     #eff1f5

set $red        #bf616a
set $orange     #d08770
set $yellow     #ebcb8b
set $green      #a3be8c
set $cyan       #96b5b4
set $blue       #8fa1b3
set $magenta    #b48ead
set $brown      #ab7967

set $transparent #00000000

#-------------------------#
#     Launch Bindings     #
#-------------------------#

# Application Launcher
bindsym $mod+grave exec     "fish -c 'rofi -m -5 -show run'"

# Window Switcher
bindsym $mod+Tab exec       "rofi -show window"

# Terminal
# bindsym $mod+Return exec "i3-sensible-terminal"
bindsym $mod+Return exec    "termite -e 'tmux new-session'"

# Lock Screen
bindsym $mod+Shift+Tab exec "~/.local/bin/lock.sh"

#-------------------------#
#      Function Keys      #
#-------------------------#

# Set Compose key for special characters
exec --no-startup-id                "setxkbmap -option compose:rctrl"

# Screen backlight brightness
bindsym XF86MonBrightnessUp exec    "light -A 5 -s intel_backlight"
bindsym XF86MonBrightnessDown exec  "light -U 5 -s intel_backlight"

# Volume control
bindsym XF86AudioRaiseVolume exec   "pamixer -i 5"
bindsym XF86AudioLowerVolume exec   "pamixer -d 5"
bindsym XF86AudioMute exec          "pamixer -t"
# Media player controls
bindsym XF86AudioPlay exec          "playerctl play-pause"
bindsym XF86AudioNext exec          "playerctl next"
bindsym XF86AudioPrev exec          "playerctl previous"

## Screenshots
bindsym --release Print exec        "scrot -z ~/incoming/screenshots/%Y-%m-%d_%k:%M:%S.png"
bindsym --release Mod1+Sys_Req exec "scrot -zu ~/incoming/screenshots/%Y-%m-%d_%k:%M:%S.png"
bindsym --release Shift+Print exec  "scrot -zs ~/incoming/screenshots/%Y-%m-%d_%k:%M:%S.png"

#-------------------------#
#       Workspaces        #
