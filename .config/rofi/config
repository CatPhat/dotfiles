! Enable the extended coloring options
rofi.color-enabled: true

! Setting theme doesn't seem necessary when colors are specified in rofi config file
!rofi.theme: base16-ocean

rofi.font:  SauceCodePro Nerd Font, Semibold 12

! Property Name     BG       Border   Separator
rofi.color-window:  #343d46, #343d46, #2b303b

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #343d46, #c0c5ce, #343d46, #343d46, #eff1f5
rofi.color-active:  #343d46, #8fa1b3, #343d46, #343d46, #8fa1b3
rofi.color-urgent:  #343d46, #bf616a, #343d46, #343d46, #bf616a

! Set the desired separator style
rofi.separator-style: solid

rofi.modi: window,run,ssh
rofi.terminal:              /usr/bin/termite
rofi.ssh-client:           ssh
rofi.ssh-command:          {terminal} -e "tmux new-session {ssh-client} {host}"
rofi.run-command:          {cmd}
rofi.run-shell-command:    {terminal} -e "tmux new-session {cmd}"
